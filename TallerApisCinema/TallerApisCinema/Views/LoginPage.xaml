<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerApisCinema.Views.LoginPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Orientation="Vertical" VerticalOptions="Center">
        <Image Source="Cinema.jpg"/>
        <Entry x:Name="Usuario" Placeholder="Digite Usuario"/>
        <Entry x:Name="Password" Placeholder="Digite Contraseña" IsPassword="True"/>
        <Button Text="Ingresar" Clicked="Ingresar_click"/>
    </StackLayout>
</ContentPage>